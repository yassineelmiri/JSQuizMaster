      href="assets/img/favicon.png"
      sizes="20x20"
      type="image/png"
    />
    <!-- Stylesheet -->
    <link rel="stylesheet" href="assets/css/vendor.css" />
    <link rel="stylesheet" href="assets/css/style.css" />
